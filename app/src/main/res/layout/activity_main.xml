<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button4"
        android:layout_width="190dp"
        android:layout_height="62dp"
        android:text="Show Employee Data"
        android:onClick="show_list"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/click_image"/>

    <Button
        android:id="@+id/camera_button"
        android:layout_width="190dp"
        android:layout_height="62dp"
        android:text="Open Camera to capture Image"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/click_image"/>

    <ImageView
        android:id="@+id/click_image"
        android:layout_width="411dp"
        android:layout_height="481dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/button"
        android:layout_width="190dp"
        android:layout_height="62dp"
        android:onClick="dial"
        android:text="Make a Phone call"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/camera_button"
        app:layout_constraintStart_toEndOf="@id/camera_button"
        app:layout_constraintBottom_toBottomOf="@id/camera_button"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="190dp"
        android:layout_height="62dp"
        android:text="Enter Data in Database"
        app:layout_constraintBottom_toBottomOf="@id/button4"
        app:layout_constraintEnd_toStartOf="@id/button4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/button4"
        android:onClick="enterDatabase"/>

</androidx.constraintlayout.widget.ConstraintLayout>